<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/green"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnBack"
        android:text="Back"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:text="ตั้งค่า"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/txtData"
        android:textSize="23dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รับประทาน :"
        android:textColor="@android:color/black"
        android:textSize="20dp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ก่อนอาหารทันที"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:onClick="ClickItem"
            android:id="@+id/type1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="หลังอาหารทันที"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:onClick="ClickItem"
            android:id="@+id/type2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ก่อนอาหาร 30 นาที"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:onClick="ClickItem"
            android:id="@+id/type33" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="หลังอาหาร 30 นาที"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:onClick="ClickItem"
            android:id="@+id/type44" />



    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ช่วงเวลา :"
        android:textColor="@android:color/black"
        android:textSize="20dp"/>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ตามเวลา"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:onClick="ClickItem1"
            android:id="@+id/type5" />
