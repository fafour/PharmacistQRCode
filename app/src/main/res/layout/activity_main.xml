<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.javacodegeeks.androidstartactivityforresultexample.ActivityOne"
    xmlns:tools="http://schemas.android.com/tools">
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pharmacist Alerts"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/textView" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:id="@+id/imbScanQRCode"
                android:background="@drawable/scanqr"
                android:onClick="btnQRCode" />
            <Button
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:onClick="btnQRCode"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_blue_dark"
                android:textSize="17dp"
                android:text="Scan QR Code"
                android:id="@+id/btqrcode" />
                >


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:id="@+id/imbAdd"
                android:background="@drawable/capsule"
                android:onClick="btnAdd" />
            <Button
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="btnAdd"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="@android:color/holo_blue_dark"
                android:textSize="17dp"
                android:text="Add Pharmacist"
                android:id="@+id/btAdd" />
            >


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:id="@+id/imbSetting"
                android:background="@drawable/alarmicon"
                android:onClick="btnSetting" />
            <Button
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="btnSetting"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="Setting Alerts"
                android:id="@+id/btSitting" />
            >


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:id="@+id/imbHistory"
                android:background="@drawable/his"
                android:onClick="btnHistory" />
            <Button
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="btnHistory"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="@android:color/holo_blue_dark"
                android:textSize="17dp"
                android:text="History"
                android:id="@+id/btHistory" />
            >
        </LinearLayout>

    </LinearLayout>




</LinearLayout>
